---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_OWNER, SITE_TITLE, SITE_DESCRIPTION, SITE_GITHUB, SITE_LINKEDIN, SITE_EMAIL } from '../consts';

const featuredProjects = [
	{
		title: 'Timing Diagram Analyzer',
		image: '/images/featured-timing-diagram.svg',
		tags: ['Python', 'SQL', 'Log Diagnostics'],
		problem:
			'AMHS incidents required engineers to manually reconstruct material flow from 100MB+ log files, delaying production restarts.',
		solution:
			'Built a diagnostics tool that parses raw conveyor, AGV, and robot events into interactive timelines so integration teams can isolate faults in minutes.',
		features: [
			'Ingests multi-hundred MB AMHS logs and renders synchronized timelines in under two minutes',
			'Advanced filtering to spotlight interlocks across conveyors, lifts, and vehicle fleets',
			'Exports annotated incident reports for shift handovers and long-term RCA baselines'
		],
		impact:
			'Cut incident diagnosis time from hours to minutes, directly improving 24/7 battery manufacturing throughput.',
		github: 'https://github.com/SulthanZahran91/plc_to_wavedrom'
	},
	{
		title: 'SQL Query Dependency Visualizer',
		image: '/images/featured-sql-visualizer.svg',
		tags: ['Python', 'SQL Parsing', 'Graph Visualization'],
		problem:
			'Understanding legacy analytics queries with five or more interlinked CTEs made it painful to trace how data flowed through each transformation.',
		solution:
			'Implemented a SQL parser that maps CTE definitions and references into dependency graphs, producing instant visuals of table lineage.',
		features: [
			'AST-powered parser with support for nested and recursive CTE chains',
			'Directed graph output that highlights data flow between intermediate tables',
			'Detectors for circular dependencies and unused CTE blocks'
		],
		impact:
			'Gave data teams a shared view of complex query structure, accelerating refactors and onboarding for analytics projects.',
		github: 'https://github.com/SulthanZahran91/SQL_analyzer'
	},
	{
		title: 'SEC Financial Data Extraction Pipeline',
		image: '/images/featured-sec-pipeline.svg',
		tags: ['Python', 'LLM Automation', 'Data Pipelines'],
		badge: 'Contact for Details',
		problem:
			'Research teams were manually scraping hundreds of SEC filings to surface comparable financial metrics, consuming months of effort.',
		solution:
			'Delivered an automated pipeline that crawls filings, extracts structured data with LLM validation, and delivers clean datasets overnight.',
		features: [
			'Headless crawler that processes 500+ filings (75k pages) into normalized document batches',
			'LLM-assisted parsing with schema validation to safeguard financial metrics',
			'Batch orchestration with monitoring hooks for fast reruns and audit trails'
		],
		impact:
			'Compressed months of manual data extraction into a single nightly run, unblocking academic research timelines.',
		github: null
	}
];

const otherProjects = [
	{
		title: 'Spectroscopy Analysis & Autofitting Tool',
		image: '/images/other-spectroscopy.svg',
		description:
			'Automated MATLAB workflow that ingests spectroscopy scans, fits curves to spectral peaks, and calculates critical physics constants for lab teams.',
		tags: ['MATLAB', 'Scientific Computing', 'Curve Fitting'],
		badge: 'Contact for Details',
		github: null
	},
	{
		title: 'BMKG Sensor Visualization Dashboard',
		image: '/images/other-bmkg-dashboard.svg',
		description:
			"Real-time dashboard for Indonesia's BMKG that visualizes geophysical sensor readings to highlight anomalies and emerging trends.",
		tags: ['Python', 'Real-time Data', 'Visualization'],
		badge: 'Private Project',
		github: null
	},
	{
		title: 'Temperature Sensor Signal Filter',
		image: '/images/other-temperature-filter.svg',
		description:
			'Digital filtering pipeline that denoises raw temperature sensor signals while preserving responsiveness for downstream analytics.',
		tags: ['Digital Signal Processing', 'Filtering', 'Embedded'],
		badge: 'Private Project',
		github: null
	}
];

const experiences = [
	{
		company: 'LG Sinarmas Technology Solutions',
		role: 'Smart Factory Integrator (AMHS)',
		location: 'Karawang, Indonesia',
		period: 'Apr 2024 - Present',
		highlights: [
			'Selected as <strong>1 of 4 engineers</strong> for a two-month deployment to South Korea, leading AMHS subsystem integration testing for two new LG ENSOL Ochang facilities.',
			'Ran end-to-end validation of AMHS-AGV flows linking real-time dispatch, material control systems, and conveyor infrastructure built on an OpenTCS architecture.',
			'Surfaced and resolved <strong>15+ integration issues</strong> prior to go-live, preventing production delays.',
			'Built Python and SQL Timing Diagram Analyzer that digests <strong>100MB+ log files</strong> to shrink incident diagnosis from <strong>hours to minutes</strong>.',
			'Developed logistics algorithms that orchestrate <strong>thousands of concurrent material moves</strong> across <strong>eight production lines</strong> in a 24/7 battery plant.',
			'Introduced tooling upgrades including version control automation and static analysis, raising code quality for a <strong>10+ person engineering team</strong>.'
		]
	},
	{
		company: 'Universitas Indonesia - FAAN Laboratory',
		role: 'Research Assistant',
		location: 'Jakarta, Indonesia',
		period: 'Oct 2023 - Mar 2024',
		highlights: [
			'Built a real-time spectroscopy analysis application in MATLAB App Designer for laboratory researchers.',
			'Implemented signal processing pipelines and automated curve fitting for high resolution spectral datasets.'
		]
	}
];

const skills = [
	'Automated Material Handling Systems (AMHS)',
	'Real-Time Dispatch (RTD)',
	'AGV & Conveyor Integration',
	'Python (Pandas, Flask)',
	'SQL Server & MySQL',
	'MATLAB App Designer',
	'Log Diagnostics & Observability',
	'ETL & Data Pipelines',
	'LLM Integration (LangChain)',
	'C# / WPF Tooling',
	'Control Systems & PLC Programming',
	'Docker & Linux Automation'
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="page-main">
			<section class="hero">
				<div class="hero-copy">
					<p class="hero-role">Hardware-Software Integration Engineer</p>
					<h1>{SITE_OWNER}</h1>
					<p class="hero-specialty">
						{SITE_DESCRIPTION}
					</p>
					<p class="hero-tagline">
						I bridge the gap between PLC/control systems and modern software engineering—solving automation problems that stump pure CS engineers through deep understanding of both physical constraints and software architecture.
					</p>
					<div class="hero-stats">
						<div class="stat">
							<span class="stat-value">36+ hours</span>
							<span class="stat-label">Saved per cycle</span>
						</div>
						<div class="stat">
							<span class="stat-value">8+ tools</span>
							<span class="stat-label">Self-initiated</span>
						</div>
						<div class="stat">
							<span class="stat-value">1000s</span>
							<span class="stat-label">Daily material moves</span>
						</div>
					</div>
					<div class="hero-actions">
						<a class="btn btn-primary" href="#projects">View Projects</a>
						<a class="btn btn-secondary" href="/resume.pdf" download="Sulthan_Zahran_Resume.pdf">
							Download Resume
						</a>
						<a class="btn btn-secondary" href={SITE_GITHUB} target="_blank" rel="noreferrer">GitHub</a>
					</div>
				</div>
			</section>

			<section id="projects" class="featured-projects">
				<div class="section-header">
					<h2>Featured Projects</h2>
					<span class="section-rule" aria-hidden="true"></span>
				</div>
				<div class="project-list">
					{featuredProjects.map((project, index) => (
						<article class:list={['project-card', { reverse: index % 2 === 1 }]}>
							<div class="project-media">
								<img src={project.image} alt={project.title} width="600" height="375" loading="lazy" />
							</div>
							<div class="project-content">
								<div class="project-header">
									<h3>{project.title}</h3>
									{project.badge && <span class="project-badge">{project.badge}</span>}
								</div>
								<ul class="project-tags">
									{project.tags.map((tag) => (
										<li>{tag}</li>
									))}
								</ul>
								<div class="project-description">
									<div>
										<span class="label">The Problem</span>
										<p>{project.problem}</p>
									</div>
									<div>
										<span class="label">Solution</span>
										<p>{project.solution}</p>
									</div>
									<div>
										<span class="label">Key Features</span>
										<ul class="feature-list">
											{project.features.map((feature) => (
												<li>{feature}</li>
											))}
										</ul>
									</div>
									{project.impact && (
										<div>
											<span class="label">Impact</span>
											<p>{project.impact}</p>
										</div>
									)}
								</div>
								{project.github ? (
									<a class="project-link" href={project.github} target="_blank" rel="noreferrer">
										View on GitHub &rarr;
									</a>
								) : (
									<a class="project-link" href={`mailto:${SITE_EMAIL}?subject=Inquiry about ${project.title}`}>
										Contact for Details &rarr;
									</a>
								)}
							</div>
						</article>
					))}
				</div>
			</section>

			<section class="other-projects">
				<div class="section-header">
					<h2>Other Projects</h2>
					<span class="section-rule" aria-hidden="true"></span>
				</div>
				<div class="other-grid">
					{otherProjects.map((project) => (
						<article class="other-card">
							<img src={project.image} alt={project.title} width="320" height="200" loading="lazy" />
							<div class="other-content">
								<div class="project-header">
									<h3>{project.title}</h3>
									{project.badge && <span class="project-badge small">{project.badge}</span>}
								</div>
								<p>{project.description}</p>
								<ul class="project-tags small">
									{project.tags.map((tag) => (
										<li>{tag}</li>
									))}
								</ul>
								{project.github ? (
									<a class="project-link" href={project.github} target="_blank" rel="noreferrer">
										View on GitHub &rarr;
									</a>
								) : (
									<a class="project-link" href={`mailto:${SITE_EMAIL}?subject=Inquiry about ${project.title}`}>
										Contact for Details &rarr;
									</a>
								)}
							</div>
						</article>
					))}
				</div>
			</section>

			<section id="experience" class="experience">
				<div class="section-header">
					<h2>Work Experience</h2>
					<span class="section-rule" aria-hidden="true"></span>
				</div>
				<div class="experience-list">
					{experiences.map((job) => (
						<article class="experience-card">
							<div class="experience-meta">
								<h3>{job.role}</h3>
								<div class="experience-company">{job.company}</div>
								<div class="experience-details">
									<span>{job.location}</span>
									<span aria-hidden="true">&middot;</span>
									<span>{job.period}</span>
								</div>
							</div>
							<ul class="experience-highlights">
								{job.highlights.map((point) => (
									<li set:html={point}></li>
								))}
							</ul>
						</article>
					))}
				</div>
			</section>

			<section class="skills">
				<div class="section-header">
					<h2>Technical Skills</h2>
					<span class="section-rule" aria-hidden="true"></span>
				</div>
				<ul class="skill-list">
					{skills.map((skill) => (
						<li>{skill}</li>
					))}
				</ul>
			</section>

			<section id="contact" class="contact-cta">
				<div class="cta-card">
					<h2>Let’s collaborate</h2>
					<p>
						I’m always interested in complex systems work, automation, and developer tooling. Drop me a line and
						let’s make the unknown obvious.
					</p>
					<div class="cta-actions">
						<a class="btn btn-primary" href={`mailto:${SITE_EMAIL}`}>Email Me</a>
						<a class="btn btn-secondary" href={SITE_LINKEDIN} target="_blank" rel="noreferrer">LinkedIn</a>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.page-main {
		max-width: var(--max-content-width);
		margin: 0 auto;
		padding: 0 var(--layout-padding);
	}
	section {
		padding: var(--section-spacing) 0;
	}
	.hero {
		position: relative;
		padding-top: clamp(6rem, 15vw, 10rem);
		padding-bottom: clamp(5rem, 12vw, 7.5rem);
		text-align: center;
		overflow: hidden;
	}
	.hero::before {
		content: '';
		position: absolute;
		inset: 0;
		background: url('/images/hero-grid.svg') center/cover no-repeat;
		opacity: 0.35;
		z-index: -1;
	}
	.hero-copy {
		max-width: 720px;
		margin: 0 auto;
	}
	.hero-role {
		font-family: "JetBrains Mono", monospace;
		font-size: 1.125rem;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		color: var(--color-primary);
		margin-bottom: 0.75rem;
	}
	.hero h1 {
		font-size: clamp(2.75rem, 6vw, 3.5rem);
		font-weight: 700;
		letter-spacing: -0.02em;
		color: var(--color-code);
	}
	.hero-specialty {
		font-size: 1.125rem;
		color: var(--color-text-muted);
		margin: 1.5rem auto 1rem;
		max-width: 38ch;
	}
	.hero-tagline {
		font-size: 1rem;
		color: var(--color-text);
		margin: 0 auto 2rem;
		max-width: 48ch;
	}
	.hero-stats {
		display: flex;
		justify-content: center;
		gap: 3rem;
		margin: 2.5rem auto;
		padding: 2rem;
		border-radius: 12px;
		background: rgba(37, 99, 235, 0.05);
		border: 1px solid rgba(37, 99, 235, 0.15);
		max-width: 600px;
	}
	.stat {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
	}
	.stat-value {
		font-family: "JetBrains Mono", monospace;
		font-size: 1.75rem;
		font-weight: 700;
		color: var(--color-primary);
		line-height: 1;
	}
	.stat-label {
		font-size: 0.8rem;
		color: var(--color-text-muted);
		text-align: center;
	}
	.hero-actions {
		margin-top: 2rem;
		display: inline-flex;
		gap: 1rem;
		flex-wrap: wrap;
		justify-content: center;
	}
	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.75rem 2.5rem;
		border-radius: 6px;
		font-weight: 600;
		font-size: 1rem;
		border: 2px solid var(--color-primary);
		transition: all 0.2s ease;
	}
	.btn-primary {
		background: var(--color-primary);
		color: #ffffff;
	}
	.btn-primary:hover,
	.btn-primary:focus-visible {
		background: var(--color-primary-dark);
		border-color: var(--color-primary-dark);
		color: #ffffff;
	}
	.btn-secondary {
		background: transparent;
		color: var(--color-primary);
	}
	.btn-secondary:hover,
	.btn-secondary:focus-visible {
		background: rgba(37, 99, 235, 0.08);
	}
	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}
	.section-header h2 {
		font-size: clamp(2rem, 4vw, 2.5rem);
		font-weight: 600;
	}
	.section-rule {
		display: block;
		width: 200px;
		height: 1px;
		margin: 1rem auto 0;
		background: var(--color-divider);
	}
	.project-list {
		display: flex;
		flex-direction: column;
		gap: clamp(4rem, 8vw, 6rem);
	}
	.project-card {
		display: flex;
		gap: clamp(2.5rem, 6vw, 3.75rem);
		align-items: center;
	}
	.project-card.reverse {
		flex-direction: row-reverse;
	}
	.project-media {
		flex: 0 0 600px;
		max-width: 100%;
	}
	.project-media img {
		width: 100%;
		height: auto;
		border-radius: 16px;
		border: 1px solid var(--color-divider);
		box-shadow: var(--shadow-soft);
	}
	.project-content {
		flex: 1;
	}
	.project-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		flex-wrap: wrap;
		margin-bottom: 0.75rem;
	}
	.project-header h3 {
		margin: 0;
	}
	.project-content h3 {
		font-size: 1.5rem;
	}
	.project-badge {
		display: inline-flex;
		align-items: center;
		padding: 0.35rem 0.85rem;
		border-radius: 6px;
		background: rgba(37, 99, 235, 0.1);
		color: var(--color-primary);
		font-size: 0.75rem;
		font-weight: 600;
		letter-spacing: 0.02em;
		white-space: nowrap;
	}
	.project-badge.small {
		padding: 0.25rem 0.65rem;
		font-size: 0.7rem;
	}
	.project-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin: 0 0 1.5rem;
		padding: 0;
		list-style: none;
	}
	.project-tags li {
		padding: 0.25rem 0.75rem;
		border-radius: 4px;
		border: 1px solid var(--color-primary);
		color: var(--color-primary);
		font-size: 0.85rem;
		font-weight: 500;
	}
	.project-description {
		display: grid;
		gap: 1.5rem;
		margin-bottom: 1.5rem;
	}
	.label {
		display: block;
		font-size: 0.75rem;
		font-weight: 600;
		letter-spacing: 0.08em;
		color: var(--color-primary);
		text-transform: uppercase;
		margin-bottom: 0.5rem;
	}
	.project-description p {
		margin: 0;
		color: var(--color-text);
	}
	.feature-list {
		margin: 0;
		padding-left: 1.25rem;
		list-style: none;
		display: grid;
		gap: 0.75rem;
	}
	.feature-list li {
		position: relative;
		padding-left: 1.25rem;
		color: var(--color-text);
	}
	.feature-list li::before {
		content: '\2023';
		position: absolute;
		left: 0;
		color: var(--color-primary);
	}
	.project-link {
		display: inline-flex;
		align-items: center;
		font-weight: 600;
	}
	.other-projects {
		background: var(--color-surface);
		padding-left: var(--layout-padding);
		padding-right: var(--layout-padding);
		border-radius: 24px;
	}
	.other-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}
	.other-card {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		background: #ffffff;
		border-radius: 16px;
		padding: 2rem;
		border: 1px solid var(--color-divider);
		box-shadow: var(--shadow-soft);
	}
	.other-card img {
		border-radius: 12px;
		border: 1px solid var(--color-divider);
	}
	.other-card h3 {
		font-size: 1.25rem;
		margin: 0;
	}
	.other-card .project-header {
		margin-bottom: 0.75rem;
	}
	.other-card p {
		margin: 0 0 1.25rem;
		color: var(--color-text-muted);
	}
	.project-tags.small li {
		font-size: 0.75rem;
		padding: 0.2rem 0.6rem;
	}
	.experience {
		background: var(--color-surface);
		border-radius: 24px;
		padding-left: var(--layout-padding);
		padding-right: var(--layout-padding);
	}
	.experience-list {
		display: grid;
		gap: clamp(2rem, 5vw, 3rem);
	}
	.experience-card {
		background: #ffffff;
		border-radius: 18px;
		border: 1px solid var(--color-divider);
		box-shadow: var(--shadow-soft);
		padding: clamp(2rem, 5vw, 2.5rem);
		display: grid;
		gap: 1.5rem;
	}
	.experience-meta h3 {
		margin: 0 0 0.5rem;
		font-size: 1.35rem;
	}
	.experience-company {
		font-weight: 600;
		color: var(--color-primary);
		margin-bottom: 0.35rem;
	}
	.experience-details {
		display: inline-flex;
		gap: 0.65rem;
		font-size: 0.95rem;
		color: var(--color-text-muted);
		flex-wrap: wrap;
	}
	.experience-highlights {
		margin: 0;
		padding-left: 1.25rem;
		list-style: none;
		display: grid;
		gap: 0.75rem;
	}
	.experience-highlights li {
		position: relative;
		color: var(--color-text);
		padding-left: 1rem;
	}
	.experience-highlights li::before {
		content: '';
		position: absolute;
		left: 0;
		top: 0.55rem;
		width: 6px;
		height: 6px;
		border-radius: 50%;
		background: var(--color-primary);
	}
	.experience-highlights strong {
		color: var(--color-primary);
		font-weight: 600;
	}
	.skills {
		text-align: center;
	}
	.skill-list {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 0.75rem;
		margin: 0 auto;
		padding: 0;
		list-style: none;
		max-width: 800px;
	}
	.skill-list li {
		padding: 0.6rem 1.5rem;
		border-radius: 999px;
		border: 1px solid var(--color-divider);
		background: #ffffff;
		color: var(--color-text);
		font-weight: 500;
		font-size: 0.9rem;
	}
	.contact-cta {
		padding-bottom: clamp(4rem, 10vw, 6rem);
	}
	.cta-card {
		border: 1px solid var(--color-divider);
		border-radius: 24px;
		padding: clamp(2.5rem, 6vw, 3.5rem);
		text-align: center;
		background: #ffffff;
		box-shadow: var(--shadow-soft);
		max-width: 720px;
		margin: 0 auto;
	}
	.cta-card h2 {
		font-size: clamp(2rem, 4vw, 2.5rem);
		margin-bottom: 1rem;
	}
	.cta-card p {
		margin: 0 auto 2rem;
		color: var(--color-text-muted);
		max-width: 36ch;
	}
	.cta-actions {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
	}
