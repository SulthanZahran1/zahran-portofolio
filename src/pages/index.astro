---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_OWNER, SITE_TITLE, SITE_DESCRIPTION, SITE_GITHUB, SITE_LINKEDIN, SITE_EMAIL } from '../consts';

const featuredProjects = [
	{
		title: 'Systems Observer',
		image: '/images/featured-systems-observer.svg',
		tags: ['TypeScript', 'Astro', 'D3.js'],
		problem:
			'Distributed telemetry was siloed across teams, making it impossible to spot regressions before they touched production.',
		solution:
			'Unified all ingest streams into a visual console with anomaly detection overlays so engineers can catch issues within minutes.',
		features: ['Live topology map with health overlays', 'Automated drift alerts for key services', 'Exportable incident timelines'],
		github: 'https://github.com/zsult/systems-observer'
	},
	{
		title: 'Automation Pipeline',
		image: '/images/featured-automation-pipeline.svg',
		tags: ['Python', 'FastAPI', 'Docker'],
		problem:
			'Release operations relied on brittle scripts and manual hand-offs, breaking every time a dependency changed.',
		solution:
			'Orchestrated parameterized pipelines with an API surface so feature teams can ship from a single command.',
		features: ['Reusable workflow templates', 'Secrets management baked in', 'Runtime metrics surfaced to Prometheus'],
		github: 'https://github.com/zsult/automation-pipeline'
	},
	{
		title: 'Insight Console',
		image: '/images/featured-insight-console.svg',
		tags: ['Rust', 'WebAssembly', 'Tailwind CSS'],
		problem:
			'Program analysis relied on spreadsheets and screenshots that went stale before stakeholders made a decision.',
		solution:
			'Delivered a zero-install console that compiles heavy data parsing to WebAssembly and streams interactive insights.',
		features: ['High-fidelity diff visualizer', 'LLM-assisted summaries', 'Offline-ready via service workers'],
		github: 'https://github.com/zsult/insight-console'
	}
];

const otherProjects = [
	{
		title: 'CLI Metrics',
		image: '/images/other-cli-metrics.svg',
		description:
			'Lightweight CLI that snapshots system telemetry, signs payloads, and ships deltas to a metrics lake in under 2 seconds.',
		tags: ['Go', 'SQLite'],
		github: 'https://github.com/zsult/cli-metrics'
	},
	{
		title: 'Log Viewer',
		image: '/images/other-log-viewer.svg',
		description:
			'Streaming log explorer with regex presets and context-aware highlights for correlated traces and events.',
		tags: ['React', 'Tailwind'],
		github: 'https://github.com/zsult/log-viewer'
	},
	{
		title: 'Config Sync',
		image: '/images/other-config-sync.svg',
		description:
			'Declarative config sync that observes edge environments and rolls out changes with audit trails and guardrails.',
		tags: ['Terraform', 'TypeScript'],
		github: 'https://github.com/zsult/config-sync'
	},
	{
		title: 'Simulation Runner',
		image: '/images/other-sim-runner.svg',
		description:
			'Batch simulator for scenario testing with deterministic seeding and profile exports for cross-team sharing.',
		tags: ['Rust', 'WebAssembly'],
		github: 'https://github.com/zsult/sim-runner'
	}
];

const skills = [
	'Python',
	'Rust',
	'TypeScript',
	'React',
	'Astro',
	'PyQt',
	'Real-time Systems',
	'Concurrent Programming',
	'System Architecture',
	'Performance Optimization',
	'Data Analysis',
	'Automation',
	'LLM Integration'
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="page-main">
			<section class="hero">
				<div class="hero-copy">
					<p class="hero-role">Software Engineer</p>
					<h1>{SITE_OWNER}</h1>
					<p class="hero-specialty">
						Specializing in systems analysis, tooling automation, and solving complex technical problems.
					</p>
					<p class="hero-tagline">I build tools to make hard problems visible.</p>
					<div class="hero-actions">
						<a class="btn btn-primary" href="#projects">View Projects</a>
						<a class="btn btn-secondary" href={SITE_GITHUB} target="_blank" rel="noreferrer">GitHub</a>
					</div>
				</div>
			</section>

			<section id="projects" class="featured-projects">
				<div class="section-header">
					<h2>Featured Projects</h2>
					<span class="section-rule" aria-hidden="true"></span>
				</div>
				<div class="project-list">
					{featuredProjects.map((project, index) => (
						<article class:list={['project-card', { reverse: index % 2 === 1 }]}>
							<div class="project-media">
								<img src={project.image} alt={project.title} width="600" height="375" loading="lazy" />
							</div>
							<div class="project-content">
								<h3>{project.title}</h3>
								<ul class="project-tags">
									{project.tags.map((tag) => (
										<li>{tag}</li>
									))}
								</ul>
								<div class="project-description">
									<div>
										<span class="label">The Problem</span>
										<p>{project.problem}</p>
									</div>
									<div>
										<span class="label">Solution</span>
										<p>{project.solution}</p>
									</div>
									<div>
										<span class="label">Key Features</span>
										<ul class="feature-list">
											{project.features.map((feature) => (
												<li>{feature}</li>
											))}
										</ul>
									</div>
								</div>
								<a class="project-link" href={project.github} target="_blank" rel="noreferrer">
									View on GitHub &rarr;
								</a>
							</div>
						</article>
					))}
				</div>
			</section>

			<section class="other-projects">
				<div class="section-header">
					<h2>Other Projects</h2>
					<span class="section-rule" aria-hidden="true"></span>
				</div>
				<div class="other-grid">
					{otherProjects.map((project) => (
						<article class="other-card">
							<img src={project.image} alt={project.title} width="320" height="200" loading="lazy" />
							<div class="other-content">
								<h3>{project.title}</h3>
								<p>{project.description}</p>
								<ul class="project-tags small">
									{project.tags.map((tag) => (
										<li>{tag}</li>
									))}
								</ul>
								<a class="project-link" href={project.github} target="_blank" rel="noreferrer">
									View on GitHub &rarr;
								</a>
							</div>
						</article>
					))}
				</div>
			</section>

			<section class="skills">
				<div class="section-header">
					<h2>Technical Skills</h2>
					<span class="section-rule" aria-hidden="true"></span>
				</div>
				<ul class="skill-list">
					{skills.map((skill) => (
						<li>{skill}</li>
					))}
				</ul>
			</section>

			<section id="contact" class="contact-cta">
				<div class="cta-card">
					<h2>Let’s collaborate</h2>
					<p>
						I’m always interested in complex systems work, automation, and developer tooling. Drop me a line and
						let’s make the unknown obvious.
					</p>
					<div class="cta-actions">
						<a class="btn btn-primary" href={`mailto:${SITE_EMAIL}`}>Email Me</a>
						<a class="btn btn-secondary" href={SITE_LINKEDIN} target="_blank" rel="noreferrer">LinkedIn</a>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.page-main {
		max-width: var(--max-content-width);
		margin: 0 auto;
		padding: 0 var(--layout-padding);
	}
	section {
		padding: var(--section-spacing) 0;
	}
	.hero {
		position: relative;
		padding-top: clamp(6rem, 15vw, 10rem);
		padding-bottom: clamp(5rem, 12vw, 7.5rem);
		text-align: center;
		overflow: hidden;
	}
	.hero::before {
		content: '';
		position: absolute;
		inset: 0;
		background: url('/images/hero-grid.svg') center/cover no-repeat;
		opacity: 0.35;
		z-index: -1;
	}
	.hero-copy {
		max-width: 720px;
		margin: 0 auto;
	}
	.hero-role {
		font-family: "JetBrains Mono", monospace;
		font-size: 1.125rem;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		color: var(--color-primary);
		margin-bottom: 0.75rem;
	}
	.hero h1 {
		font-size: clamp(2.75rem, 6vw, 3.5rem);
		font-weight: 700;
		letter-spacing: -0.02em;
		color: var(--color-code);
	}
	.hero-specialty {
		font-size: 1.125rem;
		color: var(--color-text-muted);
		margin: 1.5rem auto 1rem;
		max-width: 38ch;
	}
	.hero-tagline {
		font-size: 1rem;
		color: var(--color-text);
		margin: 0 auto;
		max-width: 34ch;
	}
	.hero-actions {
		margin-top: 3rem;
		display: inline-flex;
		gap: 1rem;
	}
	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.75rem 2.5rem;
		border-radius: 6px;
		font-weight: 600;
		font-size: 1rem;
		border: 2px solid var(--color-primary);
		transition: all 0.2s ease;
	}
	.btn-primary {
		background: var(--color-primary);
		color: #ffffff;
	}
	.btn-primary:hover,
	.btn-primary:focus-visible {
		background: var(--color-primary-dark);
		border-color: var(--color-primary-dark);
		color: #ffffff;
	}
	.btn-secondary {
		background: transparent;
		color: var(--color-primary);
	}
	.btn-secondary:hover,
	.btn-secondary:focus-visible {
		background: rgba(37, 99, 235, 0.08);
	}
	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}
	.section-header h2 {
		font-size: clamp(2rem, 4vw, 2.5rem);
		font-weight: 600;
	}
	.section-rule {
		display: block;
		width: 200px;
		height: 1px;
		margin: 1rem auto 0;
		background: var(--color-divider);
	}
	.project-list {
		display: flex;
		flex-direction: column;
		gap: clamp(4rem, 8vw, 6rem);
	}
	.project-card {
		display: flex;
		gap: clamp(2.5rem, 6vw, 3.75rem);
		align-items: center;
	}
	.project-card.reverse {
		flex-direction: row-reverse;
	}
	.project-media {
		flex: 0 0 600px;
		max-width: 100%;
	}
	.project-media img {
		width: 100%;
		height: auto;
		border-radius: 16px;
		border: 1px solid var(--color-divider);
		box-shadow: var(--shadow-soft);
	}
	.project-content {
		flex: 1;
	}
	.project-content h3 {
		font-size: 1.5rem;
		margin-bottom: 0.75rem;
	}
	.project-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin: 0 0 1.5rem;
		padding: 0;
		list-style: none;
	}
	.project-tags li {
		padding: 0.25rem 0.75rem;
		border-radius: 4px;
		border: 1px solid var(--color-primary);
		color: var(--color-primary);
		font-size: 0.85rem;
		font-weight: 500;
	}
	.project-description {
		display: grid;
		gap: 1.5rem;
		margin-bottom: 1.5rem;
	}
	.label {
		display: block;
		font-size: 0.75rem;
		font-weight: 600;
		letter-spacing: 0.08em;
		color: var(--color-primary);
		text-transform: uppercase;
		margin-bottom: 0.5rem;
	}
	.project-description p {
		margin: 0;
		color: var(--color-text);
	}
	.feature-list {
		margin: 0;
		padding-left: 1.25rem;
		list-style: none;
		display: grid;
		gap: 0.75rem;
	}
	.feature-list li {
		position: relative;
		padding-left: 1.25rem;
		color: var(--color-text);
	}
	.feature-list li::before {
		content: '\2023';
		position: absolute;
		left: 0;
		color: var(--color-primary);
	}
	.project-link {
		display: inline-flex;
		align-items: center;
		font-weight: 600;
	}
	.other-projects {
		background: var(--color-surface);
		padding-left: var(--layout-padding);
		padding-right: var(--layout-padding);
		border-radius: 24px;
	}
	.other-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}
	.other-card {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		background: #ffffff;
		border-radius: 16px;
		padding: 2rem;
		border: 1px solid var(--color-divider);
		box-shadow: var(--shadow-soft);
	}
	.other-card img {
		border-radius: 12px;
		border: 1px solid var(--color-divider);
	}
	.other-card h3 {
		font-size: 1.25rem;
		margin: 0 0 0.75rem;
	}
	.other-card p {
		margin: 0 0 1.25rem;
		color: var(--color-text-muted);
	}
	.project-tags.small li {
		font-size: 0.75rem;
		padding: 0.2rem 0.6rem;
	}
	.skills {
		text-align: center;
	}
	.skill-list {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 0.75rem;
		margin: 0 auto;
		padding: 0;
		list-style: none;
		max-width: 800px;
	}
	.skill-list li {
		padding: 0.6rem 1.5rem;
		border-radius: 999px;
		border: 1px solid var(--color-divider);
		background: #ffffff;
		color: var(--color-text);
		font-weight: 500;
		font-size: 0.9rem;
	}
	.contact-cta {
		padding-bottom: clamp(4rem, 10vw, 6rem);
	}
	.cta-card {
		border: 1px solid var(--color-divider);
		border-radius: 24px;
		padding: clamp(2.5rem, 6vw, 3.5rem);
		text-align: center;
		background: #ffffff;
		box-shadow: var(--shadow-soft);
		max-width: 720px;
		margin: 0 auto;
	}
	.cta-card h2 {
		font-size: clamp(2rem, 4vw, 2.5rem);
		margin-bottom: 1rem;
	}
	.cta-card p {
		margin: 0 auto 2rem;
		color: var(--color-text-muted);
		max-width: 36ch;
	}
	.cta-actions {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
	}
	@media (max-width: 1200px) {
		.project-card,
		.project-card.reverse {
			flex-direction: column;
		}
		.project-media {
			width: 100%;
		}
	}
	@media (max-width: 1024px) {
		.other-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}
	@media (max-width: 768px) {
		.hero-actions {
			flex-direction: column;
			width: 100%;
		}
		.btn {
			width: 100%;
		}
		.project-card,
		.project-card.reverse {
			gap: 2rem;
		}
		.other-projects {
			padding: var(--section-spacing) var(--layout-padding);
		}
	}
	@media (max-width: 640px) {
		.other-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
