---
import { SITE_GITHUB, SITE_LINKEDIN, SITE_EMAIL, SITE_OWNER } from '../consts';

const year = new Date().getFullYear();
---

<footer class="site-footer">
	<div class="footer-shell">
		<div class="footer-links" aria-label="Contact links">
			<a href={SITE_GITHUB} target="_blank" rel="noreferrer" aria-label="GitHub">
				<img src="/images/icon-github.svg" alt="" width="48" height="48" />
			</a>
			<a href={SITE_LINKEDIN} target="_blank" rel="noreferrer" aria-label="LinkedIn">
				<img src="/images/icon-linkedin.svg" alt="" width="48" height="48" />
			</a>
			<a href={`mailto:${SITE_EMAIL}`} aria-label="Email">
				<img src="/images/icon-email.svg" alt="" width="48" height="48" />
			</a>
		</div>
		<p class="footer-meta">Built with Astro • Updated Oct 2025</p>
		<p class="footer-copy">© {year} {SITE_OWNER}. All rights reserved.</p>
	</div>
</footer>
<style>
	.site-footer {
		padding: 5rem 1rem 3.75rem;
		background: #ffffff;
		border-top: 1px solid var(--color-divider);
	}
	.footer-shell {
		max-width: var(--max-content-width);
		margin: 0 auto;
		padding: 0 var(--layout-padding);
		text-align: center;
		color: var(--color-text-muted);
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5rem;
	}
	.footer-links {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 2rem;
	}
	.footer-links a {
		display: inline-flex;
		transition: transform 0.2s ease, opacity 0.2s ease;
	}
	.footer-links a:hover,
	.footer-links a:focus-visible {
		transform: translateY(-2px);
		opacity: 0.85;
	}
	.footer-meta {
		font-size: 0.9rem;
		color: #9ca3af;
		margin: 0;
	}
	.footer-copy {
		font-size: 0.9rem;
		margin: 0;
	}
	@media (max-width: 600px) {
		.site-footer {
			padding: 4rem 1rem 3rem;
		}
		.footer-links {
			gap: 1.5rem;
		}
	}
</style>
